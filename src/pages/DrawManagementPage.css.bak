/* src/pages/DrawManagementPage.css */
.draw-management-page {
  padding: 24px;
}

.draw-management-card {
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.draw-steps {
  margin-bottom: 32px;
}

.draw-step-content {
  margin-top: 24px;
}

.draw-execution-card {
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.draw-execution-info {
  margin-bottom: 16px;
  font-size: 16px;
}

.draw-execution-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 24px;
}

.draw-permission-warning {
  margin-top: 12px;
  color: #ff4d4f;
  font-size: 14px;
}

.draw-results-card {
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.draw-results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.draw-results-info {
  font-size: 16px;
}

.draw-results-info p {
  margin-bottom: 8px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .draw-management-page {
    padding: 16px;
  }
  
  .draw-steps {
    margin-bottom: 24px;
  }
  
  .draw-results-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .draw-results-header button {
    margin-top: 16px;
  }
}

/* Ant Design Steps overrides */
.draw-steps .ant-steps-item-title {
  font-size: 16px;
}

.draw-steps .ant-steps-item-icon {
  background-color: #fff;
  border-color: #1890ff;
}

.draw-steps .ant-steps-item-active .ant-steps-item-icon {
  background-color: #1890ff;
}

.draw-steps .ant-steps-item-finish .ant-steps-item-icon {
  background-color: #52c41a;
  border-color: #52c41a;
}

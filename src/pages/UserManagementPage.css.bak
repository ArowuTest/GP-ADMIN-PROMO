/* src/pages/UserManagementPage.css */
.user-management-page {
  padding: 24px;
}

.user-tabs {
  background-color: #fff;
  padding: 16px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* Ant Design Tab overrides */
.user-tabs .ant-tabs-nav {
  margin-bottom: 16px;
}

.user-tabs .ant-tabs-tab {
  padding: 8px 16px;
}

.user-tabs .ant-tabs-tab-active {
  font-weight: 500;
}

.user-tabs .ant-tabs-content {
  padding: 8px 0;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .user-management-page {
    padding: 16px;
  }
  
  .user-tabs {
    padding: 12px;
  }
}

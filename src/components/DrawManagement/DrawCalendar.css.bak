/* src/components/DrawManagement/DrawCalendar.css */
.draw-calendar-container {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  background-color: #fff;
}

.draw-calendar-badge-container {
  padding: 0 8px;
  margin-top: 4px;
}

.draw-calendar-loading {
  opacity: 0.7;
  pointer-events: none;
}

.draw-calendar-loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.7);
  z-index: 10;
}

.draw-calendar-loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  border-top-color: #1890ff;
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Override Ant Design calendar styles for better appearance */
.draw-calendar-container .ant-picker-calendar-header {
  padding: 12px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.draw-calendar-container .ant-picker-calendar-date {
  border-radius: 4px;
  transition: background-color 0.3s;
}

.draw-calendar-container .ant-picker-calendar-date-today {
  border-color: #1890ff;
}

.draw-calendar-container .ant-picker-calendar-date-selected {
  background-color: #e6f7ff;
}

.draw-calendar-container .ant-badge-status-text {
  font-size: 12px;
}

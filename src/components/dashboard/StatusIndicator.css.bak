.status-indicator {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  border-radius: 6px;
  font-weight: 500;
}

.status-operational {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1px solid #b7eb8f;
}

.status-maintenance {
  background-color: #fff7e6;
  color: #fa8c16;
  border: 1px solid #ffd591;
}

.status-issue {
  background-color: #fff1f0;
  color: #f5222d;
  border: 1px solid #ffa39e;
}

.status-unknown {
  background-color: #f5f5f5;
  color: #8c8c8c;
  border: 1px solid #d9d9d9;
}

.status-icon {
  margin-right: 8px;
  font-size: 20px;
}

.status-label {
  font-size: 14px;
}

import React from 'react';
import './ActivityFeed.css';

interface ActivityItem {
  id: string;
  type: 'draw' | 'upload' | 'winner' | 'user' | 'system';
  message: string;
  timestamp: string;
  user?: string;
}

const ActivityFeed: React.FC = () => {
  // Mock activity data - in a real implementation, this would come from an API
  const activities: ActivityItem[] = [
    {
      id: '1',
      type: 'draw',
      message: 'Daily draw executed successfully',
      timestamp: '2 hours ago',
      user: 'System'
    },
    {
      id: '2',
      type: 'upload',
      message: 'Participant data uploaded',
      timestamp: '4 hours ago',
      user: 'John Admin'
    },
    {
      id: '3',
      type: 'winner',
      message: 'Winner notification sent to 12 participants',
      timestamp: '1 day ago',
      user: 'System'
    },
    {
      id: '4',
      type: 'user',
      message: 'New admin user created',
      timestamp: '2 days ago',
      user: 'Sarah Manager'
    },
    {
      id: '5',
      type: 'system',
      message: 'System maintenance completed',
      timestamp: '3 days ago',
      user: 'System'
    }
  ];

  const getActivityIcon = (type: string) => {
    switch (type) {
      case 'draw':
        return 'casino';
      case 'upload':
        return 'upload_file';
      case 'winner':
        return 'emoji_events';
      case 'user':
        return 'person';
      case 'system':
        return 'settings';
      default:
        return 'info';
    }
  };

  return (
    <div className="activity-feed">
      {activities.map(activity => (
        <div key={activity.id} className={`activity-item ${activity.type}`}>
          <div className="activity-icon">
            <span className="material-icons">{getActivityIcon(activity.type)}</span>
          </div>
          <div className="activity-content">
            <div className="activity-message">{activity.message}</div>
            <div className="activity-meta">
              <span className="activity-time">{activity.timestamp}</span>
              {activity.user && <span className="activity-user">by {activity.user}</span>}
            </div>
          </div>
        </div>
      ))}
    </div>
  );
};

export default ActivityFeed;

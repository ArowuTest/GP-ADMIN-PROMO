.activity-feed {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.activity-item {
  display: flex;
  padding: 12px;
  border-radius: 6px;
  background-color: #ffffff;
  border-left: 4px solid #d9d9d9;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.activity-item:hover {
  transform: translateX(2px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.activity-item.draw {
  border-left-color: #722ed1;
}

.activity-item.upload {
  border-left-color: #1890ff;
}

.activity-item.winner {
  border-left-color: #52c41a;
}

.activity-item.user {
  border-left-color: #fa8c16;
}

.activity-item.system {
  border-left-color: #f5222d;
}

.activity-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  margin-right: 12px;
  background-color: #f5f5f5;
}

.activity-item.draw .activity-icon {
  background-color: #f9f0ff;
  color: #722ed1;
}

.activity-item.upload .activity-icon {
  background-color: #e6f7ff;
  color: #1890ff;
}

.activity-item.winner .activity-icon {
  background-color: #f6ffed;
  color: #52c41a;
}

.activity-item.user .activity-icon {
  background-color: #fff7e6;
  color: #fa8c16;
}

.activity-item.system .activity-icon {
  background-color: #fff1f0;
  color: #f5222d;
}

.activity-icon .material-icons {
  font-size: 18px;
}

.activity-content {
  flex: 1;
}

.activity-message {
  font-size: 14px;
  color: #262626;
  margin-bottom: 4px;
}

.activity-meta {
  display: flex;
  font-size: 12px;
  color: #8c8c8c;
}

.activity-time {
  margin-right: 8px;
}

.activity-user {
  font-weight: 500;
}

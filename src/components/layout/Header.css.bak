.app-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24px;
  height: 64px;
  background-color: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 1000;
}

.logo h1 {
  margin: 0;
  font-size: 18px;
  font-weight: 600;
  color: #1890ff;
}

.user-menu {
  display: flex;
  align-items: center;
}

.user-name {
  margin-right: 16px;
  font-weight: 500;
  color: #262626;
}

.logout-button {
  display: flex;
  align-items: center;
  background: none;
  border: none;
  color: #8c8c8c;
  cursor: pointer;
  padding: 4px 8px;
  border-radius: 4px;
  transition: all 0.3s ease;
}

.logout-button:hover {
  background-color: #f5f5f5;
  color: #f5222d;
}

.logout-button .material-icons {
  font-size: 18px;
  margin-right: 4px;
}

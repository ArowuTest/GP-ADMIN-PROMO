.app-layout {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.app-container {
  display: flex;
  flex: 1;
  overflow: hidden;
}

.app-content {
  flex: 1;
  overflow-y: auto;
  background-color: #f0f2f5;
  padding: 24px;
}

@media (max-width: 768px) {
  .app-container {
    flex-direction: column;
  }
  
  .app-content {
    padding: 16px;
  }
}
